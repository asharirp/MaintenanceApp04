<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EquipmentEntryActivity">

    <TextView
        android:id="@+id/text_View_Plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:text="Plant"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edit_Text_ProdLine"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/edit_Text_Plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Insert plant location"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/text_View_Plant"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/edit_Text_EqNoEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:ems="10"
        android:hint="Insert equipment name"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/text_View_EqNoEntry"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/text_View_EqNoEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Equipment No"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edit_Text_EqNameEntry"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/button_Submit_Equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DDD"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_Text_Issue"
        app:layout_constraintVertical_bias="0.905" />

    <TextView
        android:id="@+id/Text_View_TitleEqEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Equipment Entry Form"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/text_View_EqNameEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Equipment Name"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/Text_View_TitleEqEntry"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginHorizontal="20dp"/>

    <EditText
        android:id="@+id/edit_Text_EqNameEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Insert equipment name"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_View_EqNameEntry"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:id="@+id/edit_Text_ProdLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Insert production line location"
        android:inputType="textPersonName"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/text_View_ProdLine"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/text_View_ProdLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Production Line"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/edit_Text_EqNoEntry"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/button_Back_EqEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#DDD"
        android:textColor="@color/black"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_Text_Issue"
        app:layout_constraintVertical_bias="0.905" />

</androidx.constraintlayout.widget.ConstraintLayout>